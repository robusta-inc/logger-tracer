<?xml version="1.0" encoding="UTF-8"?><!DOCTYPE log4j:configuration SYSTEM
        "log4j.dtd" >
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
    <appender name="stdout" class="org.apache.log4j.ConsoleAppender">
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern"
                   value="%d{dd MMM yyyy HH:mm:ss,SSS} - %t - %5p %c{1}:%L - %m%n" />
        </layout>
    </appender>
    <logger name="LoggingStopWatchTest" additivity="false">
        <level value="TRACE" />
        <appender-ref ref="stdout" />
    </logger>
    <logger name="LoggingMethodArgumentHandlerTest" additivity="false">
        <level value="TRACE" />
        <appender-ref ref="stdout" />
    </logger>
    <logger name="LOGGER_TRACER" additivity="false">
        <level value="ERROR" />
        <appender-ref ref="stdout" />
    </logger>
    <root>
        <priority value="ERROR"/>
        <appender-ref ref="stdout" />
    </root>
</log4j:configuration>